compatible = "zmk,combos";

#define COMBO(NAME, BINDINGS, KEYPOS, LAYERS) \
  combo_##NAME { \
    timeout-ms = <100>; \
    bindings = <BINDINGS>; \
    key-positions = <KEYPOS>; \
    layers = <LAYERS>; \
  };

combos {
  compatible = "zmk,combos";

  COMBO(col, &kp COLON, 18 19, BASE)
  COMBO(under, &kp UNDER, 8 9, BASE)
  COMBO(readline1, &mo RDL, 13 31, BASE)
